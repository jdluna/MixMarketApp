<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.mambu.xbml.client.view">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.header {
			font-size: 140%;
			text-align: center;
			font-weight: bold;
			margin: 50px;
		}
		
		
		.label {
			color: #999;
			float: left;
			margin-right: 10px;
		}
		
		.textInput {
			padding: 2px;
			color: darkBlue;
			font-weight: bold;
			float: left;
			border: 1px solid #999;
			margin-right: 10px;
			
			
		}
		
		.connectionPanel {
			clear: both;
			padding: 30px;	
		}
		
		.panel {
			width: 100%;
			font-family: "Lucida Grande", tahoma, verdana, arial, sans-serif;
			margin-left: 15px;
			margin-right: 15px;
		}
		
		.executeButton {
		    clear: both;
		    color: green;
		    font-size: 150%;
		    font-weight: bold;
		}
		
		.xbmloutput {
			border: 1px dotted #CCCCCC;
		    color: #333333;
		    font-family: monospace;
		    font-size: 80%;
		    padding: 4px;
			
		}
		
	</ui:style>
	<g:HTMLPanel styleName="{style.panel}">
		<h1>Mambu XBML Export Tool</h1>

		<h2>Mambu Connection</h2>

		<g:FlowPanel styleName="{style.connectionPanel}" width="100%">
			<g:Label text="Mambu Domain" styleName="{style.label}"/>
			<g:TextBox ui:field="domain" styleName="{style.textInput}" width="200px"/>
			
			<g:Label text="Username" styleName="{style.label}"/>
			<g:TextBox ui:field="username" styleName="{style.textInput}"/>
			
			<g:Label text="Password" styleName="{style.label}"/>
			<g:PasswordTextBox ui:field="password" styleName="{style.textInput}"/>

		</g:FlowPanel>

		<h2>XBRL Mapping</h2>
		


		<g:TabLayoutPanel barHeight="2" barUnit="EM" height="100px" animationVertical="true" ui:field="tabPanel">
			<g:tab>
				<g:header>General</g:header>
				<g:FlowPanel/>
			</g:tab>
			<g:tab>
				<g:header>Balance Sheet</g:header>
				<g:FlowPanel>
					<my:AccountWidget ui:field="adminExpense" elementName="ADMINISTRATIVE_EXPENSE"></my:AccountWidget>
				</g:FlowPanel>
			</g:tab>
			<g:tab>
				<g:header>Fee Income</g:header>
				<g:FlowPanel/>
			</g:tab>
		</g:TabLayoutPanel>
		
		<g:Button ui:field="executeButton" styleName="{style.executeButton}">Execute</g:Button>
		
		
		<h2>XBRL Output</h2>	
		
			
		<g:FlowPanel>
		
			<g:TextArea ui:field="xbmlOutput" width="100%" height="200px" styleName="{style.xbmloutput}"/>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 