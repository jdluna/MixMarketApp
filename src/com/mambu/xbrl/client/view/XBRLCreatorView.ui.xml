<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:my="urn:import:com.mambu.xbrl.client.view">
	<ui:style>
	
		.important {
			font-weight: bold;
		}
		
		.header {
			font-size: 140%;
			text-align: center;
			font-weight: bold;
			margin: 50px;
		}
		
		
		.label {
			color: #597565;
			float: left;
			margin-right: 10px;
			margin-top: 4px;
		}
		
		.textInput {
			padding: 2px;
			color: #00223f;
			font-weight: bold;
			float: left;
			border: 1px solid #999;
			margin-right: 10px;
			
		}
		
		.connectionPanel, .datePanel {
			clear: both;
			padding: 30px;	
			padding-top: 10px;
			width: 95%;
		}
		
		.panel {
			box-shadow: 0 4px 18px black;
    		font-family: helvetica,"Lucida Grande",tahoma,verdana,arial,sans-serif;
    		margin-left: auto;
    		margin-right: auto;
    		padding: 30px;
    		width: 800px;
    		background: white;
    		border: 2px solid black;
    		border-top: none;
    		border-bottom: none;
    		overflow-x: hidden;
    		overflow-y: auto;
    	}
		
		.executeButton {
		    clear: both;
		    font-size: 120%;
		    font-weight: bold;
		    margin-top: 5px;
		    padding: 3px;
		}
		
		.mappingButton {
			margin-top: 5px;
		    padding: 3px;
		    color: #333333;
    		float: right;
		}
		
		.xbmloutput {
			border: 1px dotted #CCCCCC;
		    color: #333333;
		    font-family: monospace;
		    font-size: 90%;
		    padding: 4px;
			
		}
		
		.dialogPanel{
			width: auto;
			text-align: center;	
			font-weight: bold;
			color: #333;
		}
		
		.logo {
			padding-right: 10px;	
		}
		
		
		.key, .getKey {
			font-family: monospace;
			font-weight: bold;
			font-size: 120%;
			text-align: center;	
			width: 600px;
			margin: 20px;
			border: 2px solid gold; 
			padding: 10px;
			color: black;
		}
		
		.getKey {
			width: 600px;	
			border: 1px solid #666; 
			
		}
		
		.error {
			color: red;
			font-weight: bold;	
		}
		
		.tabPanel {
			overflow: auto;	
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.panel}">
		<h1><g:Image url="http://www.blog.jbi.in/wp-content/uploads/2008/11/xml-icon.gif" height="55px" styleName="{style.logo}"/>Mambu XBRL Export Tool</h1>

		<h2>Mambu Connection</h2>

		<g:FlowPanel styleName="{style.connectionPanel}" width="100%">
			<g:Label text="Mambu Domain" styleName="{style.label}"/>
			<g:TextBox ui:field="domain" styleName="{style.textInput}" width="200px"/>
			
			<g:Label text="Username" styleName="{style.label}"/>
			<g:TextBox ui:field="username" styleName="{style.textInput}"/>
			
			<g:Label text="Password" styleName="{style.label}"/>
			<g:PasswordTextBox ui:field="password" styleName="{style.textInput}"/>

		</g:FlowPanel>
		
		<h2>Date Range</h2>
		
		<g:FlowPanel styleName="{style.datePanel}" width="100%">
			<g:Label text="From Date" styleName="{style.label}"/>
			<dp:DateBox ui:field="fromDate" styleName="{style.textInput}"/>
			
			<g:Label text="To Date" styleName="{style.label}"/>
			<dp:DateBox ui:field="toDate" styleName="{style.textInput}"/>

		</g:FlowPanel>

		<h2>XBRL Mapping</h2>

		<g:TabLayoutPanel barHeight="2" barUnit="EM" height="350px" animationVertical="true" ui:field="tabPanel" addStyleNames="{style.tabPanel}"/>
	
	<g:FormPanel ui:field='exportFormPanel' debugId='exportFormPanel'>
		<g:HTMLPanel>
		<g:Button ui:field="executeButton" styleName="{style.executeButton}">Preview XBRL</g:Button>
		<g:Image ui:field="loadingImage" url="/img/loading4.gif" />	
		<g:Button ui:field="storeButton"  styleName="{style.mappingButton}">Store Mappings</g:Button>
		<g:Button ui:field="loadButton"  styleName="{style.mappingButton}">Load Mappings</g:Button>
		<g:Button ui:field="resetButton"  styleName="{style.mappingButton}">Reset Mappings</g:Button>

			<!-- field names and values are provided dynamically -->
			<g:Hidden ui:field='xmlContents' debugId='excelFile' />
			<g:Button ui:field='exportButton' debugId='exportButton' styleName="{style.executeButton}" >Download</g:Button>
		</g:HTMLPanel>
	</g:FormPanel>
	
		<g:HTMLPanel ui:field="outputPanel">
			<h2>XBRL Output</h2>	
		
			<g:TextArea ui:field="xBRLOutput" width="100%" height="400px" styleName="{style.xbmloutput}"/>
		</g:HTMLPanel>
		
		<h1/>
		<g:HTMLPanel>
			<g:Image url="http://help.mambu.com/templates/mambu2010/images/logo.png" height="20px" styleName="{style.logo}"/>
			<g:Image url="http://www.mixmarket.org/sites/all/themes/mixm/logo.png" height="20px" styleName="{style.logo}"/>
		
		</g:HTMLPanel>
		
		<g:DialogBox ui:field="storedDialog" addStyleNames="{style.dialogPanel}">
			<g:HTMLPanel styleName="{style.dialogPanel}">
				Your XBRL settings have been stored.<br/> The following is your unique key to retrieve them.
				<g:Label ui:field="storedKeyValue" styleName="{style.key}"/>
			</g:HTMLPanel>
		</g:DialogBox>
			
		<g:DialogBox ui:field="loadDialog" addStyleNames="{style.dialogPanel}">
			<g:HTMLPanel>
				 Please enter your xbrl mapping key<br/>
				 <g:TextBox ui:field="getXBRLMappingKey" styleName="{style.getKey}"/> <p/>
				 <g:Label ui:field="storedKeyError" styleName="{style.error}">Unable to find any stored params with this key</g:Label>
				 
				 <g:Button ui:field="retrieveButton"  styleName="{style.mappingButton}">Load</g:Button>
				 
			</g:HTMLPanel>
		</g:DialogBox>
					
	</g:HTMLPanel>
</ui:UiBinder> 