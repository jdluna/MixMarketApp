<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:my="urn:import:com.mambu.xbrl.client.view">
	<ui:style>
	
		.important {
			font-weight: bold;
		}
		
		.header {
			font-size: 140%;
			text-align: center;
			font-weight: bold;
			margin: 50px;
		}
		
		
		.label {
			color: #597565;
			float: left;
			margin-right: 10px;
			margin-top: 4px;
		}
		
		.textInput {
			padding: 2px;
			color: #00223f;
			font-weight: bold;
			float: left;
			border: 1px solid #999;
			margin-right: 10px;
			
		}
		
		.connectionPanel, .datePanel {
			clear: both;
			padding: 30px;	
			padding-top: 10px
		}
		
		.panel {
			box-shadow: 0 4px 18px black;
    		font-family: helvetica,"Lucida Grande",tahoma,verdana,arial,sans-serif;
    		margin-left: auto;
    		margin-right: auto;
    		padding: 30px;
    		width: 800px;
    		background: white;
    		border: 2px solid black;
    		border-top: none;
    		border-bottom: none;
		}
		
		.executeButton {
		    clear: both;
		    font-size: 120%;
		    font-weight: bold;
		    margin-top: 5px;
		    padding: 3px;
		}
		
		.xbmloutput {
			border: 1px dotted #CCCCCC;
		    color: #333333;
		    font-family: monospace;
		    font-size: 80%;
		    padding: 4px;
			
		}
		
		.logo {
			padding-right: 10px;	
		}
		
	</ui:style>
	<g:HTMLPanel styleName="{style.panel}">
		<h1><g:Image url="http://www.blog.jbi.in/wp-content/uploads/2008/11/xml-icon.gif" height="55px" styleName="{style.logo}"/>Mambu XBRL Export Tool</h1>

		<h2>Mambu Connection</h2>

		<g:FlowPanel styleName="{style.connectionPanel}" width="100%">
			<g:Label text="Mambu Domain" styleName="{style.label}"/>
			<g:TextBox ui:field="domain" styleName="{style.textInput}" width="200px"/>
			
			<g:Label text="Username" styleName="{style.label}"/>
			<g:TextBox ui:field="username" styleName="{style.textInput}"/>
			
			<g:Label text="Password" styleName="{style.label}"/>
			<g:PasswordTextBox ui:field="password" styleName="{style.textInput}"/>

		</g:FlowPanel>
		
		<h2>Date Range</h2>
		
		<g:FlowPanel styleName="{style.datePanel}" width="100%">
			<g:Label text="From Date" styleName="{style.label}"/>
			<dp:DateBox ui:field="fromDate" styleName="{style.textInput}"/>
			
			<g:Label text="To Date" styleName="{style.label}"/>
			<dp:DateBox ui:field="toDate" styleName="{style.textInput}"/>

		</g:FlowPanel>

		<h2>XBRL Mapping</h2>

		<g:TabLayoutPanel barHeight="2" barUnit="EM" height="100px" animationVertical="true" ui:field="tabPanel"/>
		
		<g:Button ui:field="executeButton" styleName="{style.executeButton}">Preview XBRL</g:Button>
		

		<g:HTMLPanel ui:field="outputPanel">
			<h2>XBRL Output</h2>	
		
			<g:TextArea ui:field="XBRLOutput" width="100%" height="200px" styleName="{style.xbmloutput}"/>
		</g:HTMLPanel>
		
		<h1/>
		<g:HTMLPanel>
			<g:Image url="http://help.mambu.com/templates/mambu2010/images/logo.png" height="20px" styleName="{style.logo}"/>
			<g:Image url="http://www.mixmarket.org/sites/all/themes/mixm/logo.png" height="20px" styleName="{style.logo}"/>
		
		</g:HTMLPanel>
			
		
	</g:HTMLPanel>
</ui:UiBinder> 