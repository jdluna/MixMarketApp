<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style type="com.mambu.xbrl.client.view.XBRLElementWidget.MyStyle">
		
		.label {
			color: #597565;
			float: left;
			margin-right: 10px;
		}
		
		.value, .valueComputed , .valueError {
			padding: 2px;
			color: #00223f;
			font-weight: bold;
			float: left;
			border: 1px solid #999;
			margin-right: 10px;
			font-size: 110%;
		}
		
		.value:FOCUS{
			border: 1px solid black;	
		}
		
		.valueComputed {
			color: white;
			background-color: #8AB131;
			text-align: center;	
		}
		
		.valueError {
			color: red;
			background: white;
			border: 1px solid red;	
		}
		
		.holder {
			display: inline;
			float: left;	
			padding: 5px;
			margin-right: 10px;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.holder}">
			<g:Label ui:field="label" styleName="{style.label}"/><br/>
			<g:TextBox ui:field="value" styleName="{style.value}"/>
	</g:HTMLPanel>
</ui:UiBinder> 